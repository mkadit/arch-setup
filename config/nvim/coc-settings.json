{
	// LSP
	"languageserver": {
		"clangd": {
			"command": "clangd",
			"args": ["--background-index"],
			"rootPatterns": [
				"compile_flags.txt",
				"compile_commands.json",
				".vim/",
				".git/",
				".hg/"
			],
			"filetypes": ["c", "cpp", "objc", "objcpp"]
		}
	},
	// General Settings
	"suggest.noselect": false,
	"suggest.triggerAfterInsertEnter": true,
	"suggest.snippetIndicator": "ï„¤",
	"suggest.floatEnable": true,
	"codeLens.enable": true,
	"coc.preferences.formatOnSaveFiletypes": ["*"],
	"coc.preferences.snippets.enable": true,
	"diagnostic.enable": true,
	"diagnostic.messageTarget": "float",
	"diagnostic.showUnused": true,
	"diagnostic.messageDelay": 200,
	"signature.target": "float",
	"coc.preferences.hoverTarget": "float",

	// Snippets
	"snippets.userSnippetsDirectory": "~/.config/nvim/snips",

	// Prettier
	"prettier.requireConfig": false,
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,
	"prettier.singleQuote": true,
	"prettier.semi": true,
	"prettier.statusItemText": "Prettier",

	//Python
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": false,
	"python.linting.pep8Enabled": true,
	"python.linting.lintOnSave": true,

	// Java settings
	"java.import.gradle.enabled": true,
	"java.import.gradle.wrapper.enabled": true,
	"java.referencesCodeLens.enabled": true,
	"java.codeGeneration.generateComments": false,
	"java.home": "/usr/lib/jvm/default",

	// Typescript
	"tsserver.enable": true,
	"tsserver.formatOnType": false,
	"tsserver.enableJavascript": true
}
